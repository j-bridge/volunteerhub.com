# Flask / API
FLASK_ENV=production
SECRET_KEY=replace-with-random-secret
JWT_SECRET_KEY=replace-with-random-jwt-secret
DATABASE_URL=sqlite:///instance/volunteerhub.db
CORS_ORIGINS=http://localhost:5173,https://volunteerhub.apps.jbridgewater.com

# Email (SMTP)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USERNAME=apikey
SMTP_PASSWORD=replace-with-smtp-password
SMTP_USE_TLS=true
MAIL_DEFAULT_SENDER="VolunteerHub <no-reply@volunteerhub.app>"
FRONTEND_URL=https://volunteerhub.apps.jbridgewater.com

# Client
VITE_API_URL=https://volunteerhub.apps.jbridgewater.com/api
